<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabletLayout.Views.PhonePage">
  <StackLayout Orientation="Vertical" VerticalOptions="Fill" HorizontalOptions="FillAndExpand">
    <Label Text="Name" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
    <Entry Placeholder="Name" VerticalOptions="Fill" HorizontalOptions="FillAndExpand"  />
    <Label Text="Surname" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
    <Entry Placeholder="Surname" VerticalOptions="Fill" HorizontalOptions="FillAndExpand"  />
    <Label Text="Street" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
    <Entry Placeholder="Street" VerticalOptions="Fill" HorizontalOptions="FillAndExpand"  />
    <Label Text="City" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
    <Entry Placeholder="City" VerticalOptions="Fill" HorizontalOptions="FillAndExpand"  />
    <Label Text="Country" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
    <Entry Placeholder="Country" VerticalOptions="Fill" HorizontalOptions="FillAndExpand"  />
    <Button Text="Submit" VerticalOptions="Fill" HorizontalOptions="FillAndExpand" />
  </StackLayout>
</ContentPage>